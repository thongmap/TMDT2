@model IEnumerable <TMDT.Product>
@{
    ViewBag.Title = "Sold";
    Layout = "~/Views/Shared/_LayoutMerchant.cshtml";
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Danh sách đã bán</h3>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @if (ViewBag.Mess != null)
        {
            @ViewBag.Mess
        }
        <table class="table table-default table-striped table-bordered">
            <thead>
            <th>STT</th>
            <th>Hình ảnh</th>
            <th>Tên</th>
            <th>Loại sản phẩm</th>
            <th>Giá bán ($)</th>
            <th>Số lượng tồn</th>
            <th></th>
            </thead>
            <tbody>
                @{int i = 1; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@{
                            string parameterValue = item.Image.ToString().Substring(0, item.Image.IndexOf("|"));
                        }
                        <img src="@Url.Content("/public/MyImages/" + Html.DisplayFor(modelitem => parameterValue))" width="50px" height="50px" /></td>
                        <td>@Html.DisplayFor(modelitem => item.ProductName)</td>
                        <td>@Html.DisplayFor(modelitem => item.Category.Name)</td>
                        <td>@Html.DisplayFor(modelitem => item.Price)</td>
                        <td>@Html.DisplayFor(modelitem => item.Quantity)</td>
                        <td>@Html.ActionLink("Xem Chi tiết", "ProductInfo", "Merchant", new { id = item.ProductID }, "")</td>
                        @{ i++;}
                    </tr>


                            }
            </tbody>
        </table>
    </div>
</div>




