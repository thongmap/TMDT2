@model PagedList.IPagedList<TMDT.Account>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListRating";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Thống kê đánh giá</h2>
<div class="row">
    <div class="col-lg-6">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Tên tài khoản</th>
                        <th>Tổng đánh giá cao nhất</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Account item in ViewBag.HighRating)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.Action("GetRating", new { m = (item.Rating + "," + item.NoRating) })


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Tên tài khoản</th>
                        <th>Tổng đánh giá thấp nhất</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Account item in ViewBag.LowRating)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.Action("GetRating", new { m = (item.Rating + "," + item.NoRating) })
                                <a href="@Url.Action("CanhBao", "Admin", new { id = item.AccountID })" title="cảnh báo" class="btn-images btn btn btn-default">Cảnh báo</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

